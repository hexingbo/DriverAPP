<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_stausview" />

    <include layout="@layout/public_include_title" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/public_mar_left_20dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="标题"
        android:textColor="@color/public_color_333333"
        android:textSize="@dimen/public_font_18sp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/public_mar_left_15dp"
        android:layout_marginRight="@dimen/public_mar_left_15dp"
        android:layout_marginBottom="@dimen/public_mar_left_15dp"
        android:gravity="left"
        android:text="内容"
        android:textColor="@color/public_color_333333"
        android:textSize="@dimen/public_font_14sp" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_height_44dp"
        android:layout_gravity="center"
        android:background="@color/white"
        app:tl_divider_color="@color/public_color_333333"
        app:tl_divider_padding="@dimen/public_pad_left_10dp"
        app:tl_indicator_color="@color/public_color_FED652"
        app:tl_indicator_corner_radius="@dimen/public_radius_2dp"
        app:tl_indicator_height="@dimen/public_height_4dp"
        app:tl_indicator_width="@dimen/public_width_20dp"
        app:tl_indicator_width_equal_title="false"
        app:tl_tab_space_equal="true"
        app:tl_textAllCaps="true"
        app:tl_textSelectColor="@color/public_color_333333"
        app:tl_textUnselectColor="@color/public_color_999999"
        app:tl_textsize="@dimen/public_font_18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_height_3dp"
        android:background="@color/white" />

    <me.jessyan.armscomponent.commonres.weight.NoInterceptionViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <!--点击之后的颜色-->
            <!-- <solid android:color="#fff000"/>-->
            <!--设置渐变色 angle=0 从左到右渲染，angle=90从上到下渲染，angle=180 从右到左渲染，-->
            <gradient android:angle="45" android:endColor="@color/color_endColor" android:startColor="@color/color_startColor" android:type="linear" />
            <!--设置角的弧度-->
            <corners android:radius="@dimen/public_radius_23dp" />
            <!--设置边框以及弧度-->
            <!-- <stroke
                 android:width="1dp"
                 android:color="#000000" />-->
        </shape>
    </item>

    <item android:state_pressed="true">

        <shape android:shape="rectangle">

            <!--点击之后的颜色-->
            <!-- <solid android:color="#fff000"/>-->
            <!--设置角的弧度-->
            <corners android:radius="@dimen/public_radius_23dp" />
            <!--点击之后的边框-->
            <!--<stroke
                android:width="1dp"
                android:color="#000000"/>-->
            <!--android:centerColor="#f63244"-->
            <gradient android:angle="45" android:endColor="@color/color_endColor" android:startColor="@color/color_startColor" android:type="linear" />

        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/ll_root"
    android:padding="@dimen/public_pad_left_10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_company_head"
            android:layout_width="@dimen/public_width_60dp"
            android:layout_height="@dimen/public_height_60dp"
            android:src="@mipmap/ic_head_default" />

        <CheckBox
            android:id="@+id/cb_selected"
            android:layout_width="@dimen/public_width_20dp"
            android:layout_height="@dimen/public_height_20dp"
            android:layout_alignTop="@id/img_company_head"
            android:layout_alignRight="@id/img_company_head"
            android:background="@drawable/selected_company_cb_orange_style"
            android:button="@null" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/public_mar_top_5dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:textColor="#ff333331"
        android:textSize="@dimen/public_font_16sp"
        tools:text="佛山顺富物流有限公司" />
</LinearLayout>
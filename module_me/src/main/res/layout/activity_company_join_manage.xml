<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_stausview" />

    <include layout="@layout/public_include_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_height_44dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_code_two"
            android:layout_width="@dimen/public_height_44dp"
            android:layout_height="@dimen/public_height_44dp"
            android:layout_marginLeft="@dimen/public_mar_left_15dp"
            android:layout_marginRight="@dimen/public_mar_left_15dp"
            android:padding="@dimen/public_pad_left_10dp"
            android:src="@mipmap/ic_code_two" />

        <me.jessyan.armscomponent.commonres.other.ClearEditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="@string/module_me_hint_search_company_name"
            android:imeOptions="actionSearch"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="@color/public_color_333333"
            android:textSize="@dimen/public_font_16sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="@dimen/public_height_44dp"
            android:layout_height="@dimen/public_height_44dp"
            android:layout_marginLeft="@dimen/public_mar_left_15dp"
            android:layout_marginRight="@dimen/public_mar_left_15dp"
            android:padding="@dimen/public_pad_left_10dp"
            android:src="@mipmap/ic_search_black" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/public_mar_left_15dp"
        android:text="@string/module_me_register_company"
        android:textColor="#fffaca0c"
        android:textSize="@dimen/public_font_18sp" />

    <com.zhouyou.recyclerview.XRecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:overScrollMode="never"
        android:padding="@dimen/public_mar_left_5dp" />

</LinearLayout>
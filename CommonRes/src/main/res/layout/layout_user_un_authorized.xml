<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_user_un_aauthorized" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您还未认证，认证通过才可以收到订单哦！"
        android:textColor="#ff5c5f66"
        android:textSize="@dimen/public_font_14sp" />

    <TextView
        android:id="@+id/tv_authoriz"
        android:layout_width="@dimen/public_width_145dp"
        android:layout_height="@dimen/public_height_46dp"
        android:layout_marginTop="@dimen/public_mar_top_50dp"
        android:background="@drawable/shape_circular20_line_orge"
        android:gravity="center"
        android:text="去认证"
        android:textColor="#fffaca0c"
        android:textSize="@dimen/public_font_18sp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/public_mar_left_15dp"
    android:layout_marginRight="@dimen/public_mar_right_15dp"
    android:background="@drawable/bg_hint_dialog_card"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="35dp"
    android:paddingBottom="30dp">

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:paddingStart="@dimen/public_pad_left_10dp"
        android:textColor="#333333"
        android:textSize="@dimen/public_font_14sp"
        tools:text="内容" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_height_40dp"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_rr_cancel_bg"
            android:gravity="center"
            android:text="@string/str_cancle"
            android:textColor="@color/public_color_333333"
            android:textSize="@dimen/public_font_16sp" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_rr_confirm_bg"
            android:gravity="center"
            android:text="@string/str_confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/public_font_16sp" />
    </LinearLayout>


</LinearLayout>



<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_hint_dialog_card"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/public_dialog_width_249dp"
        android:layout_height="@dimen/public_dialog_height_162dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/public_height_50dp"
            android:ellipsize="end"
            android:gravity="bottom|center_horizontal"
            android:paddingStart="@dimen/public_pad_left_10dp"
            android:paddingEnd="@dimen/public_pad_right_10dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="@dimen/public_font_16sp"
            tools:text="标题" />

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/public_pad_top_10dp"
            android:maxLines="2"
            android:paddingStart="@dimen/public_pad_left_10dp"
            android:paddingEnd="@dimen/public_pad_right_10dp"
            android:textColor="#333333"
            android:textSize="@dimen/public_font_14sp"
            tools:text="内容" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_dividingback" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/public_dialog_height_44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/str_cancle"
                android:textColor="#666666"
                android:textSize="@dimen/public_font_16sp" />

            <View
                android:id="@+id/view_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/color_dividingback" />

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/str_confirm"
                android:textColor="#EC2D56"
                android:textSize="@dimen/public_font_16sp" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>

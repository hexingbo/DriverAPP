<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/public_height_12dp"
    android:layout_marginTop="@dimen/public_height_6dp"
    android:layout_marginBottom="@dimen/public_height_6dp"
    android:layout_marginRight="@dimen/public_height_12dp"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/public_height_12dp"
    app:cardElevation="@dimen/public_height_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/public_pad_left_15dp"
        android:paddingTop="@dimen/public_pad_top_15dp"
        android:paddingRight="@dimen/public_pad_right_15dp"
        android:paddingBottom="@dimen/public_pad_bottom_20dp">

        <include layout="@layout/item_layout_car_info" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/public_height_32dp"
            android:layout_marginTop="@dimen/public_mar_top_20dp">

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/public_color_FACA0C"
                android:textSize="@dimen/public_font_14sp"
                tools:text="默认状态" />

            <TextView
                android:id="@+id/tv_error"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/public_height_16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/public_mar_left_10dp"
                android:layout_marginRight="@dimen/public_mar_right_10dp"
                android:background="@drawable/car_join_list_item_error_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/public_pad_left_5dp"
                android:paddingRight="@dimen/public_pad_right_5dp"
                android:textColor="@color/public_color_FF3333"
                android:textSize="@dimen/public_font_10sp"
                android:visibility="gone"
                android:singleLine="true"
                android:ellipsize="end"
                tools:text="错误状态" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/btn"
                android:layout_width="@dimen/public_width_80dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/car_join_list_item_btn"
                android:textColor="@color/public_color_333333"
                android:textSize="@dimen/public_font_14sp"
                android:gravity="center"
                tools:text="@string/button_cancel" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>

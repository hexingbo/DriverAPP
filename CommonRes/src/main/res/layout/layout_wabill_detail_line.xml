<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/public_mar_left_7fdp"
        android:background="@drawable/shape_circular14_gray" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <me.jessyan.armscomponent.commonres.weight.CocoView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/public_mar_left_10dp"
            android:layout_marginRight="@dimen/public_mar_right_10dp"
            app:canvas_color="@color/white"
            app:first_color="#e6e6e6"
            app:first_width="@dimen/public_width_2dp"
            app:height="@dimen/public_height_5dp"
            app:offset_width="@dimen/public_width_2dp"
            app:second_color="#e6e6e6"
            app:second_width="@dimen/public_width_2dp" />
    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/public_mar_right_7fdp"
        android:background="@drawable/shape_circular14_gray" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/public_color_F0F0F0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/public_pad_left_5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/public_mar_left_5dp"
                android:background="@drawable/shape_radius15_gray"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/public_height_60dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/public_mar_left_15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/hipping_information"
                        android:textColor="@color/public_color_333333"
                        android:textSize="@dimen/public_font_18sp" />

                    <include layout="@layout/layout_wabill_detail_line" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/public_mar_left_5dp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/public_pad_left_5dp"
                    android:paddingRight="@dimen/public_pad_right_5dp">

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/public_mar_left_5dp"
                        android:text="预计发货日期："
                        android:textColor="@color/public_color_333333"
                        android:textSize="@dimen/public_font_14sp" />

                    <TextView
                        android:id="@+id/tv_car_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/public_mar_left_5dp"
                        android:text="车牌号："
                        android:textColor="@color/public_color_333333"
                        android:textSize="@dimen/public_font_14sp" />

                    <TextView
                        android:id="@+id/tv_driver_transport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/public_mar_left_5dp"
                        android:text="运输司机："
                        android:textColor="@color/public_color_333333"
                        android:textSize="@dimen/public_font_14sp" />


                    <TextView
                        android:id="@+id/tv_shipping_warehouse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/public_mar_left_5dp"
                        android:text="发货仓："
                        android:textColor="@color/public_color_333333"
                        android:textSize="@dimen/public_font_14sp" />

                    <TextView
                        android:id="@+id/tv_delivery_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/public_mar_left_5dp"
                        android:text="发货类型："
                        android:textColor="@color/public_color_333333"
                        android:textSize="@dimen/public_font_14sp" />


                    <TextView
                        android:id="@+id/tv_Bill_numbers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/public_mar_left_5dp"
                        android:text="货运单号："
                        android:textColor="@color/public_color_333333"
                        android:textSize="@dimen/public_font_14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/public_mar_left_5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发货地址："
                            android:textColor="@color/public_color_333333"
                            android:textSize="@dimen/public_font_14sp" />

                        <TextView
                            android:id="@+id/tv_ship_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/public_color_333333"
                            android:textSize="@dimen/public_font_14sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/public_mar_left_5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收货地址："
                            android:textColor="@color/public_color_333333"
                            android:textSize="@dimen/public_font_14sp" />

                        <TextView
                            android:id="@+id/tv_harvest_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/public_color_333333"
                            android:textSize="@dimen/public_font_14sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_receiving_party"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/public_mar_left_5dp"
                        android:text="收货方："
                        android:textColor="@color/public_color_333333"
                        android:textSize="@dimen/public_font_14sp" />

                    <TextView
                        android:id="@+id/tv_carriage_party"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/public_mar_left_5dp"
                        android:text="承运方："
                        android:textColor="@color/public_color_333333"
                        android:textSize="@dimen/public_font_14sp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/public_mar_left_5dp"
                android:background="@drawable/shape_radius15_gray"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/public_height_60dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/public_mar_left_15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/order_information"
                        android:textColor="@color/public_color_333333"
                        android:textSize="@dimen/public_font_18sp" />

                    <include layout="@layout/layout_wabill_detail_line" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/public_mar_left_5dp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/public_pad_left_5dp"
                    android:paddingRight="@dimen/public_pad_right_5dp">

                    <TextView
                        android:id="@+id/tv_order_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/public_mar_left_15dp"
                        android:text="订单号："
                        android:textColor="@color/public_color_333333"
                        android:textSize="@dimen/public_font_14sp" />

                    <TextView
                        android:id="@+id/tv_goods_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/public_mar_left_5dp"
                        android:text="货物："
                        android:textColor="@color/public_color_333333"
                        android:textSize="@dimen/public_font_14sp" />

                    <TextView
                        android:id="@+id/tv_depart_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/public_mar_left_5dp"
                        android:text="发车时间："
                        android:textColor="@color/public_color_333333"
                        android:textSize="@dimen/public_font_14sp" />

                    <TextView
                        android:id="@+id/tv_arrival_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/public_mar_left_5dp"
                        android:text="到货时间："
                        android:textColor="@color/public_color_333333"
                        android:textSize="@dimen/public_font_14sp" />

                    <TextView
                        android:id="@+id/tv_remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/public_mar_left_5dp"
                        android:text="备注："
                        android:textColor="@color/public_color_333333"
                        android:textSize="@dimen/public_font_14sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/cv_order_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/public_height_60dp"
                android:layout_margin="@dimen/public_mar_left_5dp"
                android:background="@drawable/shape_radius15_gray"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/public_mar_left_5dp"
                    android:paddingLeft="@dimen/public_pad_left_5dp">

                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/order_number"
                        android:textColor="@color/public_color_333333"
                        android:textSize="@dimen/public_font_14sp" />

                    <EditText
                        android:id="@+id/et_goods_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/public_mar_left_10dp"
                        android:layout_toRightOf="@+id/tv"
                        android:background="@null"
                        android:hint="@string/input_goods_number"
                        android:textSize="@dimen/public_font_14sp" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_track"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/public_mar_left_5dp"
                android:background="@drawable/shape_radius15_gray"
                android:orientation="vertical"
                android:paddingBottom="@dimen/public_pad_bottom_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/public_height_60dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/public_mar_left_15dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/Track_transportation"
                        android:textColor="@color/public_color_333333"
                        android:textSize="@dimen/public_font_18sp" />


                    <include layout="@layout/layout_wabill_detail_line" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/flv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/public_mar_left_10dp" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ll_order_state_fahuo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/public_mar_left_10dp"
        android:paddingRight="@dimen/public_mar_right_10dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_fahuo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/public_height_44dp"
            android:layout_margin="@dimen/public_mar_left_10dp"
            android:background="@drawable/bg_radius23_jianbian"
            android:gravity="center"
            android:text="@string/waybill_name_fahuo"
            android:textColor="@color/white"
            android:textSize="@dimen/public_font_16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_order_state_shouhuo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/public_mar_left_10dp"
        android:paddingRight="@dimen/public_mar_right_10dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_daka"
            android:layout_width="0dp"
            android:layout_height="@dimen/public_height_44dp"
            android:layout_margin="@dimen/public_mar_left_10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_radius23_line_orange_content_white"
            android:gravity="center"
            android:text="@string/waybill_name_yunshu_daka"
            android:textColor="@color/public_color_orange_light"
            android:textSize="@dimen/public_font_16sp" />

        <TextView
            android:id="@+id/tv_shouhuo"
            android:layout_width="0dp"
            android:layout_height="@dimen/public_height_44dp"
            android:layout_margin="@dimen/public_mar_left_10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_radius23_jianbian"
            android:gravity="center"
            android:text="@string/waybill_name_shouhuo"
            android:textColor="@color/white"
            android:textSize="@dimen/public_font_16sp" />
    </LinearLayout>

</LinearLayout>